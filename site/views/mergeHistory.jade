                        td#4
                    tr 
                        td 5
                        td#5
                    tr 
                        td 6
                        td#6
                    tr 
                        td 7
                        td#7
                    tr 
                        td 8
                        td#8
                    tr 
                        td 9
                        td#9
                    tr 
                        td 10
                        td#10                    
                
            
    
    
    div#eventHistory
        ul(id="history")

    script(type="text/javascript")
        function display(){
            var tasks = "!{tList}".split(",");
            for (var i =  0 ; i < tasks.length ; ++i){
                var list = document.getElementById(i+1);
                var link = document.createElement('a');
                link.href = "/merge_sort/visualisation/" + tasks[i];
                link.innerHTML = tasks[i];
                list.appendChild(link);
                console.log("Added " + tasks[i]);
            }
        }
      
        display();
